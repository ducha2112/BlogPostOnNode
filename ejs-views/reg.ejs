<!DOCTYPE html>
<html lang="ru">

<%- include('../partials/head.ejs') %>

  <body>
    <div class="container">
      <div class="header-top">
        <span class="logo">I'mProger</span>

        <%- include('../partials/nav.ejs') %>
      </div>
      <div class="form">
        <h2>Регистрация</h2>
        <form class="add_post" id="form" method="post" action="/reg">
          <label for="name">Ваше имя</label>
          <input type="text" name="name" id="name" placeholder="Введите ваше имя">

          <label for="email">Ваш email</label>
          <input type="email" name="email" id='email' placeholder="Введите ваш email">

          <label for="password">Создайте пароль</label>
          <input type="password" name="pass" id="password_1" placeholder="Введите ваш пароль" />

          <label for="password">Повторите пароль</label>
          <input type="password" name="confirmPass" id="password_2" placeholder="Повторите ваш пароль" />
          <div id="error">
            <%= data?.error %>
              <% if(data.errors) {%>
                <ul>
                  <% for(let i=0; i < data.errors.length;i++){ %>

                    <li>
                      <%= data.errors[i].msg %>
                    </li>

                    <% } %>
                </ul>
                <% } %>
          </div>
          <div id="success">
          </div>
          <input class="button" type="button" id="send" value="Зарегистрироваться" />

        </form>
      </div>
    </div>
    <%- include('../partials/footer.ejs') %>

  </body>

</html>