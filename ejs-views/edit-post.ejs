<!DOCTYPE html>
<html lang="ru">

<%- include('../partials/head.ejs') %>

  <body>
    <div class="container">
      <div class="header-top">
        <span class="logo">I'mProger</span>

        <%- include('../partials/nav.ejs') %>
      </div>
      <div class="form">
        <h2>
          <%= title %>
        </h2>
        <form action="/edit/<%= post.id %>?_method=PUT" method="post" class="add_post" enctype="multipart/form-data">
          <label for="title">Post Title</label>
          <input type="text" name="title" value="<%= post.title %>">

          <label for="author">Author</label>
          <input type="text" name="author" value="<%= post.author %>">

          <label for="post_text">Post Text</label>
          <textarea type="text" name="text"><%= post.text %></textarea>

          <label for="post_image">Изменить или добавить картинку</label>
          <input type="file" name='image' id="image">
          <input type="hidden" name="link" id="link" value="/public/uploads/<%= post.image %>">

          <button>Сохранить</button>
        </form>
      </div>
      <%- include('../partials/footer.ejs') %>

  </body>

</html>